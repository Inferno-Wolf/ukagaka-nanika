	"\s[32]"
	"\s[33]"
	"\s[35]"
}


//--OnKeyPress
OnKeyPress
{
	if reference0 == "t"
	{ OnAiTalk }
	elseif reference0 == "r"
	{ OnLastTalk }
	elseif reference0 == "f1"
	{ "\![open,readme]" }
}


