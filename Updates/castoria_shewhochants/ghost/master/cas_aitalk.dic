//-OnMinuteChange

//Keeps track of if an hour has passed.
HourCheck
{
	if passmin >= 59
	{
		passmin = 0
		passhour = passhour + 1
	}
}

//This is what will trigger time-based dialogue for your Ghost.
OnMinuteChange
{
	HourCheck
	
	if minute == 0
	{
		if timenotif == 1 //on
		{
			if hour == 12 //noon
			{
				"\0%(talkb)\s[0]Noon now.\w8\e"
			}
			elseif hour == 0 //midnight
			{
				"\0%(talkb)\s[0]Midnight...\w8 \s[32]Is it even possible to get tired in a dream?\w8\e"
			}
			else //other times
			{
				"\0%(talkb)\s[0]It's %(hour12)'o clock.\w8\e"
			}
		}
	}
	if offscreen == 1 //on
	{
		if mikireflag == 1
		{
			MikireTalk
		}
	}
}


//--OnSecondChange
//reference1 is if the ghost is offscreen or not
OnSecondChange
{
	if passsec == 59
	{
	 	passsec = 0
 		passmin = passmin + 1
	}
 	else
	{
	 	passsec = passsec + 1
	}
	if offscreen == 1 //on
	{
		mikireflag = reference1
		
		if mikireflag == 0 && reference1 == 1 //Dialogue for putting them off the screen.
		{
			MikireTalk
		}
	}
	
	if overlap == 1 //on
	{
		if reference2 == 1
		{
			"\0%(talkb)\s[39]Huh?!\w8 Something's touching me?!\w8\e"
		}
	}
}
