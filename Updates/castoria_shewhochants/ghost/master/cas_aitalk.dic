//---- MikireTalk ---------------------------------------------------------------------
//Note the hotkey combo Ctrl-Shift-F12
MikireTalk
{
	if offscreen == 1 //on
	{
		"\0%(talkb)\s[47]Ooh,\w4 is that %(anobject) I spy?\w8\e"
		
		"\0%(talkb)\s[3]You should see all these neat things back here,\w4 %(user)!\w8\e"
	}
}


//------- On Offscreen!! ------------------------------------------------------------
OnOffscreen
{
	if offscreen == 1 //on
	{
		if reference0 == 0 //the Sakura
		{
			"\0%(talkb)\s[0]Want me to sit out here?\w8 You got it.\w8\e"
		}
		elseif reference0 == 1 //the Kero
		{
			"\0%(talkb)\s[35]???\w8\e"
		}
		else //moving them back onscreen; this plays for both Sakura and Kero
		{
			"\0%(talkb)\s[3]Hey!\w8 \s[4]I'm back!\w8\e"
		}
	}
}


