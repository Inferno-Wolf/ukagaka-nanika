//-----------Menu time!
//menu.


//Because there is an all modifier here, you don't need to write -- between menu options
OnSakuraMenu : all
{
	"\0\s[0]\![set,autoscroll,disable]\_q"
	
	"\![*]\q[Talk to me,OnAiTalk]"
	if LastTalk != ""; "  \![*]\q[Say that again,OnLastTalk]"
	"\n\n"
	
	_talkrate = "Off"
	if aitalkinterval == 180; _talkrate = "3 minutes"
	elseif aitalkinterval == 300; _talkrate = "5 minutes"
	elseif aitalkinterval == 600; _talkrate = "10 minutes"
	
	"--Talk Rate Options--"
	"\nCurrently: %(_talkrate)"
	"\n\![*]\q[3min,OnTalkRateMenu,norm]  /  \![*]\q[5min,OnTalkRateMenu,poor]  /  \![*]\q[10min,OnTalkRateMenu,max] \n\![*]\q[Silent,OnTalkRateMenu,none]"
	
	"\n\n\![*]\q[Nevermind,blank]"	
}

OnLastTalk
{
	LastTalk
}

OnTalkRateMenu
{	
	if reference0 == "norm"
	{
		aitalkinterval = 180
	}
	elseif reference0 == "poor"
	{
		aitalkinterval = 300
	}
	elseif reference0 == "max"
	{
		aitalkinterval = 600
	}
	elseif reference0 == "none"
	{
		aitalkinterval = 0
	}
	OnSakuraMenu
}


