//--OnMouseMove
//---- reference3 determines the character in question
OnMouseMove
{
	if reference3 == 0 // 0, aka the main character
	{
		MouseMoveSakura
	}
	else // not 0, then it must be the side character.
	{
		MouseMoveKero
	}
}


//******************Movements!! (as explained by Zi)*********************
