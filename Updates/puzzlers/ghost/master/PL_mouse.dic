//---- OnMouseDoubleClick -------------------------------------------------------
//reference5 checks which button is being used for the click
OnMouseDoubleClick
{
	if reference5 == 0
	{
	 	if reference3 == 0 //if the character is 0, aka your main character
		{
			MouseDoubleClickSakura
		}
		else
		{
			MouseDoubleClickKero
		}
	}
}


//---- MouseDoubleClickSakura ----------------------------------------------------------
